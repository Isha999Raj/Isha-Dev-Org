<apex:page controller="AngularCreateAccountContact" standardStylesheets="false" sidebar="false">
    <html>
        <head>
            <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.6.9/angular.min.js"></script>
             <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/css/bootstrap.min.css"/>
             <script src="https://cdn.jsdelivr.net/npm/jquery@3.5.1/dist/jquery.slim.min.js"></script>
             <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
             <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.1/dist/js/bootstrap.bundle.min.js"></script>
     </head>

     <body style="margin: 2%">
         <table class="table-bordered table-striped" style="width: 100%">

            <tr>
                <tr style="background-color:#ccc;">
                    <th>BASIC DETAILS :</th>
                </tr>

                <tr>
                    <th>Account Name</th>
                    <th>Website</th>
                    <th>Fax</th>
                </tr>
                
                <tr>
                    <td><input type="text" id="name" class="column" placeholder="Account Name" ng-model="Name" /></td>
                    <td><input type="text" id="webs" class="column" placeholder="Website" ng-model="Website" /></td>
                    <td><input type="text" id="fax" class="column" placeholder="Fax" ng-model="Fax" /></td>
                </tr>
            </tr>

            <tr>
                <tr style="background-color: #ccc;">
                    <th>BILLING DETAILS :</th>
                </tr>

                <tr>
                    <th>Billing City</th>
                    <th>Billing State</th>
                    <th>Billing Country</th>
                </tr>
                
                <tr>
                    <td><input type="text" id="billingcity" class="column" placeholder="Billing City" ng-model="BillingCity" /></td>
                    <td><input type="text" id="billingstate" class="column" placeholder="Billing State" ng-model="BillingState" /></td>
                    <td><input type="text" id="billingcountry" class="column" placeholder="Billing Country" ng-model="BillingCountry" /></td>
                </tr>
            </tr>

            <tr>
                <tr style="background-color: #ccc;">
                    <th>INDUSTRY DETAILS :</th>
                </tr>

                <tr>
                    <td>Industry Name</td>
                    <td>Number Of Employees</td>
                    <td>Annual Revenue</td>
                </tr>

                <tr>
                    <td><input type="text" id="industry" class="column" placeholder="Industry Name" ng-model="Industry" /></td>
                    <td><input type="text" id="noOfemployees" class="column" placeholder="Number Of Employees" ng-model="NumberOfEmployees" /></td>
                    <td><input type="text" id="annualrevenue" class="column" placeholder="Annual Revenue" ng-model="AnnualRevenue" /></td>
                </tr>
            </tr>

         </table>

     </body>

    </html>
</apex:page>